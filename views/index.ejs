<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>miniwhatsapp</title>
    <link rel="stylesheet" href="style.css">
</head>
<body>
    <h2>All Chats</h2>
    <form method="GET" action="/chats/new">
        <button class="newchat">New Chat</button>
    </form>
    <% for(let chat of chats){ %>
        <div class="chat">
            <p>From : <i><%= chat.from %> </i></p>
            <p>Received by : <i><%= chat.to %> </i></p>
            <div class="msg">
                <p>Message : <%= chat.msg %></p>
                <div class="btns">
                <form method="GET" action="/chats/<%= chat._id %>/edit">
                    <button id="edit">Edit msg</button>
                </form><br>
                <form method="POST" action="/chats/<%= chat._id %>?_method=Delete">
                    <button id="edit" class="del">Delete msg</button>
                </form>
            </div>
            </div>
            <hr>
            <div class="time">
            <p><%= chat.created_at.toString().split(" ").slice(1,4).join("-") %></p>
            <p id="t"><%= chat.created_at.toString().split(" ")[4] %></p>
            </div>
        </div>
    <% } %>
    
</body>
</html>

